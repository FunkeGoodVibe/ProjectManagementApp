<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="306.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.TasksManagementController">
   <bottom>
   	<Button fx:id="btnAddTask" alignment="CENTER" mnemonicParsing="false" onAction="#openPopUp" text="ADD TASK" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <FlowPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FADBD8;">
               <children>
                  <Label alignment="CENTER" style="-fx-background-color: #F1948A;" text="TO-DO" />
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FCF3CF;" GridPane.columnIndex="1">
               <children>
                  <Label alignment="CENTER" style="-fx-background-color: #F7DC6F;" text="DOING" />
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #D5F5E3;" GridPane.columnIndex="2">
               <children>
                  <Label alignment="CENTER" style="-fx-background-color: #82E0AA;" text="DONE" />
               </children>
            </FlowPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
